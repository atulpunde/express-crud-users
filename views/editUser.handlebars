<div class="container">
    <form class="mt-3" method="patch" action="/users/{{user.id}}">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputFname">First and last name</label>
                <input type="text" name="inputFname" class="form-control" id="inputFname" value={{user.inputFname}}>
            </div>
            <div class="form-group col-md-6">
                <label for="inputEmail">Email</label>
                <input type="text" name="inputEmail" class="form-control" id="inputEmail" value={{user.inputEmail}}>
            </div>
        </div>
        <div class="form-group">
            <label for="inputAge">Age</label>
            <input type="number" name="inputAge" class="form-control" id="inputAge" value={{user.inputAge}}>
        </div>
        <a href="/users">Go back</a>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>